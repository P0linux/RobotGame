<Window x:Class="RobotWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RobotWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="419">
    <Grid>
        <Label Content="Input robot name" HorizontalAlignment="Center" Height="34" Margin="0,62,0,0" VerticalAlignment="Top" Width="167" FontSize="20"/>
        <TextBox HorizontalAlignment="Left" Height="34" Margin="99,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" FontSize="20" Text ="{Binding RobotName, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="Start game" HorizontalAlignment="Left" Height="56" Margin="134,217,0,0" VerticalAlignment="Top" Width="162" FontSize="20" Command="{Binding StartCommand}"/>

    </Grid>
</Window>
